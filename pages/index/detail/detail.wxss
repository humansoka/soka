.swiper {
  height: 750rpx;
  width: 100%;
}

.swiper image {
  height: 100%;
  width: 100%;
}

.detail_inf {
  width: 100%;
  background-color: #fff;
  position: relative;
}

.detail_price {
  font-size: 42rpx;
  color: #f00;
  display: block;
  height: 90rpx;
  line-height: 90rpx;
  text-indent: 0.5rem;
}

.detail_price text {
  font-size: 24rpx;
}

.detail_title {
  display: block;
  font-size: 30rpx;
  line-height: 36rpx;
  padding: 0 20rpx 20rpx 20rpx;
}

.btn_share {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: #027951;
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  z-index: 9;
  opacity: 0.7;
}

.btn_share::before {
  content: "";
  position: absolute;
  width: 30rpx;
  height: 30rpx;
  left: 50%;
  top: 50%;
  margin-left: -16rpx;
  margin-top: -15rpx;
  background: url(data:image/png;base64,) center top no-repeat;
  background-size: 30rpx 30rpx;
}

.hover_bg {
  opacity: 1;
}

.detail_inf2 {
  width: 100%;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
  margin-bottom: 20rpxm;
  position: relative;
  font-size: 24rpx;
  color: #888;
  overflow: hidden;
  padding-bottom:20rpx;
  display: flex;
}

.detail_inf2 view {
  width: 250rpx;
  margin: 0 auto;
}

.detail_inf2 view:nth-child(1) { padding-left: 20rpx;}
.detail_inf2 view:nth-child(2) {
  text-align: center;
}

.detail_inf2 view:nth-child(3) {
  text-align: right; padding-right: 20rpx;
}
