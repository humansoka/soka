/* pages/cart/cart.wxss */
page{padding-bottom: 100rpx;}
.cart_list {
  width: 710rpx;
  margin: 20rpx auto;
}

.cart_cont {
  width: 100%;
  background-color: #fff;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  position: relative;
}
.item_select{
  width: 100rpx;
  min-height: 200rpx;
  float:left;
  position: relative;
 
}
.item_select image{
  position: absolute;
  left: 0;
  top:0;
 

  width: 50rpx;
  height: 50rpx;
  padding:75rpx 25rpx;

}

.cart_cont > image {
  width: 160rpx;
  height: 160rpx;
  float: left;
  margin:20rpx 0;
}
.cart_cont_title{
  display: block;
  float: left;
  margin-left: 30rpx;
  margin-top: 30rpx;
  width: 400rpx;
  font-size: 24rpx;
  line-height: 36rpx;
}
.cart_cont_price{
  display: block;
  float: left;
  font-size: 30rpx;
  margin-left: 30rpx;
  margin-top: 30rpx;
  color: #f00;
}
.cart_cont_price text{
  font-size: 24rpx;
}



.num_select {
  position: absolute;
  right:20rpx;
  bottom: 20rpx;
  display: flex;
  margin-top: -30rpx;
  border: 1rpx solid #ddd;
  border-radius: 10rpx;
  height: 50rpx;
  line-height: 50rpx;
}

.num_select view {
  width: 50rpx;
  height: 50rpx;
  display: inline-block;
  text-align: center;
  font-size: 30rpx;
  color: #888;
}

.num_select view.btn_disable2 {
  color: #ddd;
}

.num_select input {
  border-left: 1rpx solid #ddd;
  border-right: 1rpx solid #ddd;
  display: inline-block;
  font-size: 30rpx;
  color: #888;
  height:50rpx;
  line-height: 50rpx;
  width: 60rpx;
  text-align: center;
}


.btm_bar {
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  background-color: #fff;
  z-index: 999;
 
}
.buy_op{ width: 100%; position: relative;}
.item_select_all{ position: absolute;
left: 0;
 top: 0;}

.btn_buy {
  width: 200rpx;
  height: 100rpx;
  display: block;
  line-height: 100rpx;
  text-align: center;
  font-size: 30rpx;
  background-color: #027951;
  color: #fff;
  font-weight: bold;
  position: absolute;
  right: 0;
  top: 0;
}
.order_total {
  line-height: 100rpx;
  font-size: 30rpx;
  position: absolute;
  right: 220rpx;
  text-align: right;
}

.order_total text {
  color: #f00;
  font-size: 36rpx;
  font-weight: bold;
}

.order_total text text {
  font-size: 24rpx;
}
.btn_disable {
  background-color: #ddd;
}

.item_select_all{
  height: 100rpx;
  line-height: 100rpx;
}
.item_select_all image{
  position: absolute; 
  left: -6rpx;
  top: 0;

  width: 50rpx;
  height: 50rpx;
  padding: 25rpx 150rpx 25rpx 50rpx;
  z-index: 99;
}
.item_select_all text{margin-left: 120rpx; position: relative; top: 3rpx; z-index: 1;}