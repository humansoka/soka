/* pages/my/order/order.wxss */
@import '/weui.wxss';
@import '/pages/order_confirm/order_confirm.wxss';
page{ padding-bottom: 0;}
page, .page, .page__bd {
  height: 100%;
}

.page__bd {
  padding-bottom: 0;
}

.no_data {
  padding-top: 60px;
  text-align: center;
}

.weui-navbar {
  background-color: #fff;
  position: fixed;
}

.weui-navbar__item.weui-bar__item_on {
  color: #027951;
  font-weight: bold;
}

.weui-navbar__slider {
  width: 25%;
  height: 2px;
  background-color: #027951;
}

.order_status {
  width: 650rpx;
  height: 90rpx;
  line-height: 90rpx;
  border-bottom: 1px solid #eee;
  margin: 0 auto;
}

.order_id {
  font-size: 24rpx;
  color: #888;
}

.order_stat {
  float: right;
  color: #027951;
  font-size: 30rpx;
}

.order_op {
  width: 100%;
  position: relative;
  height: 80rpx;
}

.order_op > view {
  position: absolute;
  right: 30rpx;
}

.order_op > view view {
  display: inline-block;
  width: 140rpx;
  height: 56rpx;
  line-height: 56rpx;
  border-radius: 28rpx;
  border: 1rpx solid #888;
  text-align: center;
  margin-left: 20rpx;
  font-size: 24rpx;
}

.order_op > view view.btn_op {
  border: 1rpx solid #027951;
  color: #027951;
}
