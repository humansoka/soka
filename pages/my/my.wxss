.my_login {
  width: 100%;
  background-color: #fff;
  height: 260rpx;
  position: relative;
  border-bottom: 2rpx solid #eee;
}

.my_login image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 6rpx solid rgba(255, 255, 255, 0.5);
  position: absolute;
  left: 50%;
  margin-left: -50rpx;
  top: 40rpx;
  box-shadow: 0px 4rpx 8rpx 0px rgba(0, 0, 0, 0.1);
}

.my_login text {
  text-align: center;
  width: 100%;
  display: block;
  position: relative;
  top: 160rpx;
}

.setting_link {
  height: 90rpx;
  background-color: #fff;
  border-top: 2rpx solid #eee;
  border-bottom: 2rpx solid #eee;
  margin-top: 0.5rem;
}

.setting_link view {
  height: 90rpx;
  position: relative;
}

.hover_bg {
  background-color: #f5f5f5;
}

.setting_link view image {
  position: absolute;
  right: 30rpx;
  top: 50%;
  margin-top: -20rpx;
  width: 40rpx;
  height: 40rpx;
}

.setting_link text {
  margin-left: 40rpx;
  line-height: 90rpx;
  font-size: 30rpx;
}

.my_order {
  width: 100%;
  background-color: #fff;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
  margin-top: 20rpx;
  overflow: hidden;
}

.my_order_title {
  width: 690rpx;
  margin: 0 auto;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1px solid #eee;
  position: relative;
}

.my_order_title text {
  font-size: 30rpx;
}

.my_order_title view {
  display: block;
  height: 80rpx;
  position: absolute;
  right: 0;
  top: 0;
  font-size: 24rpx;
  padding-right: 30rpx;
}

.my_order_title view::before {
  content: "";
  position: absolute;
  top: 50%;
  right: -0.1rem;
  width: 1.25rem;
  height: 1.25rem;
  margin-top: -0.6rem;
  background: url(../images/icon_arrow.png) center top no-repeat;
  background-size: 1.25rem 1.25rem;
}

.my_order_tab {
  width: 100%;
  height: 4rem;
}

.my_order_tab li a {
  display: block;
  width: 33.3%;
  float: left;
  text-align: center;
  font-size: 0.6rem;
  position: relative;
}

.my_order_tab li a span {
  position: relative;
  top: 2.5rem;
  color: #666;
}

.my_order_tab li a:before {
  content: "";
  position: absolute;
  top: 0.75rem;
  left: 50%;
  width: 1.5rem;
  height: 1.5rem;
  margin-left: -0.75rem;
}

.my_order_tab li a.d1:before {
  background: url(../images/icon_fukuan.png) center top no-repeat;
  background-size: contain;
}

.my_order_tab li a.d2:before {
  background: url(../images/icon_fahuo.png) center top no-repeat;
  background-size: contain;
}

.my_order_tab li a.d3:before {
  background: url(../images/icon_shouhuo.png) center top no-repeat;
  background-size: contain;
}

.my_order_tab li a i {
  position: absolute;
  top: 0.5rem;
  left: 4rem;
  width: 0.75rem;
  height: 0.75rem;
  background-color: #f00;
  border-radius: 50%;
  text-align: center;
  line-height: 0.75rem;
  color: #fff;
  font-size: 0.5rem;
}
